@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>@Model.Value</h1>
</div>
<a class="btn btn-primary" asp-page="Index" asp-route-value="@Model.Value">Reload</a>
<a class="btn btn-secondary" asp-page="Index" asp-route-value="@Model.Value" asp-page-handler="Inc">Increase</a>
<a class="btn btn-secondary" asp-page="Index" asp-route-value="@Model.Value" asp-page-handler="Dec">Decrease</a>

<form method="post" style="padding-top: 2em">
    <input type="number" asp-for="Value" />
    <button type="submit">Submit</button>
</form>